@using Newtonsoft.Json
@{
    ViewData["Title"] = "Chart.js";
    
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>
    <body style="font-family: 'Montserrat', sans-serif;">
        <section class="ps-5 pe-5 pt-5">
            <div class="container-fluid justify-content-start">
                <p class="fs-4 fw-bold text-black"><span class="border border-3 me-3"></span>Gráficos de datos de ventas utilizando Chart.js</p>
            </div>
        </section>
        <section>
            <div class="container-fluid d-flex">
                <div class="container m-5 text-center border-bottom pb-5">
                    <p>GRÁFICO DE BARRAS</p>
                    <canvas id="barChart" width="100" height="50"></canvas>
                </div>
                <div class="container m-5 text-center border-bottom pb-5">
                    <p>GRÁFICO DE LÍNEA</p>
                    <canvas id="lineChart" width="100" height="50"></canvas>
                </div>
            </div>
            <div class="container-fluid d-flex">
                <div class="container mx-5 mb-5 text-center">
                    <p>GRÁFICO POLAR</p>
                    <canvas id="radarChart" width="100" height="50"></canvas>
                </div>
                <div class="container mx-5 mb-5 text-center">
                    <p>GRÁFICO DE DONA</p>
                    <canvas id="doughnutChart" width="100" height="50"></canvas>
                </div>
            </div>
        </section>

        @section scripts {
            <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js"></script>
            @*GRAPHIC 1*@
            <script>
                var ctx = document.getElementById('barChart').getContext('2d');
                var fechas = @Html.Raw(JsonConvert.SerializeObject(ViewBag.Fechas));
                var montos = @Html.Raw(JsonConvert.SerializeObject(ViewBag.Montos));

                var myChart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: fechas.map(fecha => new Date(fecha).toLocaleDateString()),
                        datasets: [{
                            label: 'Monto',
                            data: montos,
                            backgroundColor: 'rgba(131, 201, 8, 0.2)',
                            borderColor: 'rgba(131, 201, 8, 1)',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            yAxes: [{
                                ticks: {
                                    beginAtZero: true
                                }
                            }]
                        }
                    }
                });
            </script>
            @*GRAPHIC 2*@
            <script>
                var ctx = document.getElementById('lineChart').getContext('2d');
                var fechas = @Html.Raw(JsonConvert.SerializeObject(ViewBag.Fechas));
                var montos = @Html.Raw(JsonConvert.SerializeObject(ViewBag.Montos));

                var myChart = new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: fechas.map(fecha => new Date(fecha).toLocaleDateString()),
                        datasets: [{
                            label: 'Monto',
                            data: montos,
                            backgroundColor: 'rgba(255, 99, 132, 0.2)',
                            borderColor: 'rgba(255, 99, 132, 1)',
                            borderWidth: 1,
                            fill: false 
                        }]
                    },
                    options: {
                        scales: {
                            yAxes: [{
                                ticks: {
                                    beginAtZero: true
                                }
                            }]
                        }
                    }
                });
            </script>
            @*GRAPHIC 3*@
            <script>
                var ctx = document.getElementById('radarChart').getContext('2d');
                var fechas = @Html.Raw(JsonConvert.SerializeObject(ViewBag.Fechas));
                var montos = @Html.Raw(JsonConvert.SerializeObject(ViewBag.Montos));

                var myChart = new Chart(ctx, {
                    type: 'radar',
                    data: {
                        labels: fechas.map(fecha => new Date(fecha).toLocaleDateString()),
                        datasets: [{
                            label: 'Monto',
                            data: montos,
                            backgroundColor: 'rgba(182, 99, 255, 0.2)',
                            borderColor: 'rgba(182, 99, 255, 1)',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            r: {
                                beginAtZero: true
                            }
                        }
                    }
                });
            </script>
            @*GRAPHIC 4*@
            <script>
            var ctx = document.getElementById('doughnutChart').getContext('2d');
                var fechas = @Html.Raw(JsonConvert.SerializeObject(ViewBag.Fechas));
                var montos = @Html.Raw(JsonConvert.SerializeObject(ViewBag.Montos));

                var myChart = new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        labels: fechas.map(fecha => new Date(fecha).toLocaleDateString()),
                        datasets: [{
                            label: 'Monto',
                            data: montos,
                            backgroundColor: [
                                'rgba(255, 99, 132, 0.2)',
                                'rgba(54, 162, 235, 0.2)',
                                'rgba(255, 206, 86, 0.2)',
                                'rgba(75, 192, 192, 0.2)',
                                'rgba(153, 102, 255, 0.2)',
                                'rgba(255, 159, 64, 0.2)',
                                'rgba(255, 99, 132, 0.2)',
                                'rgba(54, 162, 235, 0.2)',
                                'rgba(255, 206, 86, 0.2)',
                                'rgba(75, 192, 192, 0.2)',
                                'rgba(153, 102, 255, 0.2)',
                                'rgba(255, 159, 64, 0.2)',
                                'rgba(255, 99, 132, 0.2)',
                                'rgba(54, 162, 235, 0.2)',
                                'rgba(255, 206, 86, 0.2)',
                                'rgba(75, 192, 192, 0.2)',
                                'rgba(153, 102, 255, 0.2)',
                                'rgba(255, 159, 64, 0.2)',
                                'rgba(255, 99, 132, 0.2)',
                                'rgba(54, 162, 235, 0.2)'
                            ],
                            borderColor: [
                                'rgba(255, 99, 132, 1)',
                                'rgba(54, 162, 235, 1)',
                                'rgba(255, 206, 86, 1)',
                                'rgba(75, 192, 192, 1)',
                                'rgba(153, 102, 255, 1)',
                                'rgba(255, 159, 64, 1)',
                                'rgba(255, 99, 132, 1)',
                                'rgba(54, 162, 235, 1)',
                                'rgba(255, 206, 86, 1)',
                                'rgba(75, 192, 192, 1)',
                                'rgba(153, 102, 255, 1)',
                                'rgba(255, 159, 64, 1)',
                                'rgba(255, 99, 132, 1)',
                                'rgba(54, 162, 235, 1)',
                                'rgba(255, 206, 86, 1)',
                                'rgba(75, 192, 192, 1)',
                                'rgba(153, 102, 255, 1)',
                                'rgba(255, 159, 64, 1)',
                                'rgba(255, 99, 132, 1)',
                                'rgba(54, 162, 235, 1)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            yAxes: [{
                                ticks: {
                                    beginAtZero: true
                                }
                            }]
                        }
                    }
                });
            </script>
        }
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>