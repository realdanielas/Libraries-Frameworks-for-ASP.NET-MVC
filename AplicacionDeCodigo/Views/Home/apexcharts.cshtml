@using Newtonsoft.Json
@{
    ViewData["Title"] = "ApexCharts";

}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <style>
        #chart {
            max-width: 650px;
            margin: 35px auto;
        }
    </style>
</head>
<body style="font-family: 'Montserrat', sans-serif;">
    <section class="ps-5 pe-5 pt-5">
        <div class="container-fluid justify-content-start">
            <p class="fs-4 fw-bold text-black"><span class="border border-3 me-3"></span>Gráficos de datos de ventas utilizando ApexCharts</p>
        </div>
    </section>
    <section>
        <div class="container-fluid d-flex">
            <div class="container m-5 text-center">
                <p>GRÁFICO DE ÁREA</p>
                <div id="chartArea"></div>
            </div> 
            <div class="container m-5 text-center">
                <p>GRÁFICO DE BARRAS</p>
                <div id="chartBar"></div>
            </div>
        </div>
        <div class="container-fluid d-flex justify-content-center">
            <div class="container m-5 text-center">
                <p>GRÁFICO POLAR</p>
                <div id="chartPolar"></div>
            </div>
        </div>
    </section>

    @section scripts {
        @*GRAPH 1*@
        <script>
            var fechas = @Html.Raw(JsonConvert.SerializeObject(ViewBag.Fechas));
            var montos = @Html.Raw(JsonConvert.SerializeObject(ViewBag.Montos));

            var options = {
                series: [{
                    name: 'Montos',
                    data: montos
                }],
                chart: {
                    height: 350,
                    type: 'area', /*line, area, bar, pie, donut, radialBar, scatter
                                   bubble, heatmap, candlestick, boxPlot, radar
                                   polarArea, rangeBar, rangeArea, treemap*/

                    fontFamily: 'Montserrat, sans-serif'
                },
                dataLabels: {
                    enabled: false
                },
                stroke: {
                    curve: 'smooth'
                },
                xaxis: {
                    type: 'datetime',
                    categories: fechas
                }
            };

            var chart = new ApexCharts(document.querySelector("#chartArea"), options);
            chart.render();
        </script>
        @*GRAPH 2*@
        <script>
            var fechas = @Html.Raw(JsonConvert.SerializeObject(ViewBag.Fechas));
            var montos = @Html.Raw(JsonConvert.SerializeObject(ViewBag.Montos));

            var options = {
                series: [{
                    name: 'Monto',
                    data: montos
                }],
                chart: {
                    height: 350,
                    type: 'bar',
                    fontFamily: 'Montserrat, sans-serif'
                },
                plotOptions: {
                    bar: {
                        borderRadius: 10,
                        dataLabels: {
                            position: 'top', // top, center, bottom
                        },
                    }
                },
                dataLabels: {
                    enabled: true,
                    formatter: function (val) {
                        return "$" + val;
                    },
                    offsetY: -20,
                    style: {
                        fontSize: '10px',
                        colors: ["#d6d6d6"]
                    }
                },

                xaxis: {
                    categories:  fechas,
                    type: 'daytime',
                    position: 'top',
                    axisBorder: {
                        show: false
                    },
                    axisTicks: {
                        show: false
                    },
                    crosshairs: {
                        fill: {
                            type: 'gradient',
                            gradient: {
                                colorFrom: '#D8E3F0',
                                colorTo: '#BED1E6',
                                stops: [0, 100],
                                opacityFrom: 0.4,
                                opacityTo: 0.5,
                            }
                        }
                    },
                    tooltip: {
                        enabled: true,
                    }
                },
                yaxis: {
                    axisBorder: {
                        show: false
                    },
                    axisTicks: {
                        show: false,
                    },
                    labels: {
                        show: false,
                        formatter: function (val) {
                            return "$" + val;
                        }
                    }

                }
            };
            var chart = new ApexCharts(document.querySelector("#chartBar"), options);
            chart.render();
        </script>
        @*GRAPH 3*@
        <script>
            var fechas = @Html.Raw(JsonConvert.SerializeObject(ViewBag.Fechas));
            var montos = @Html.Raw(JsonConvert.SerializeObject(ViewBag.Montos));

            var options = {
                series: montos,
                chart: {
                    type: 'polarArea'
                },
                labels: fechas,
                stroke: {
                    colors: ['#fff']
                },
                fill: {
                    opacity: 0.9
                },
                responsive: [{
                    breakpoint: 480,
                    options: {
                        chart: {
                            width: 200
                        },
                    }
                }]
            };

            var chart = new ApexCharts(document.querySelector("#chartPolar"), options);
            chart.render();
        </script>
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
