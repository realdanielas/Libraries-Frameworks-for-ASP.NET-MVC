            var SERIES_TITLE = ['Ventas'];

            function getData() {
                var fechas = @Html.Raw(JsonConvert.SerializeObject(ViewBag.Fechas));
                var montos = @Html.Raw(JsonConvert.SerializeObject(ViewBag.Montos));

